<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimaryDark"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/home_activity_logo_image_view"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_new_drone_icon"/>

    <GridView
        android:id="@+id/home_activity_grid_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_activity_main_menu_bg"
        android:padding="@dimen/mainmenu_padding"
        android:numColumns="2"
        android:layout_marginLeft="@dimen/mainmenu_margin_left"
        android:layout_marginRight="@dimen/mainmenu_margin_right"
        android:layout_marginTop="@dimen/mainmenu_margin_top"
        android:layout_marginBottom="@dimen/mainmenu_margin_bottom"
        android:verticalSpacing="@dimen/mainmenu_cell_space"
        android:horizontalSpacing="@dimen/mainmenu_cell_space"
        android:scrollbars="none"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>