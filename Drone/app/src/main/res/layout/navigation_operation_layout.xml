<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_operation_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#f2f7fa"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/navigation_route_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/navigation_back_to_search_image_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/navigation_back_image"/>

        <RadioGroup
            android:id="@+id/navigation_mode_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="#f2f7fa"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/navigation_walking_button"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:checked="true"
                android:text="@string/route_mode_walking"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:visibility="visible" />
            <RadioButton
                android:id="@+id/navigation_driving_button"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:text="@string/route_mode_driving"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:visibility="visible"/>
            <RadioButton
                android:id="@+id/navigation_transit_button"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:text="@string/route_map_transit"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:visibility="invisible"/>

        </RadioGroup>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/navigation_infomation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/navigation_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/navigation_timer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:background="@null"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="120dp" />

        <TextView
            android:id="@+id/navigation_distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/navigation_duration_tv"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/navigation_start_stop_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryDark"
            android:text="@string/navigation_start"
            android:textColor="@android:color/white"
            android:textSize="@dimen/btn_text_size"
            />
    </RelativeLayout>

</LinearLayout>
