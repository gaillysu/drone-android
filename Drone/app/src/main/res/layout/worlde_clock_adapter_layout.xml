<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:layout_height="64dp">

        <LinearLayout
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/world_clock_item_city"
                style="@style/world_clock_adapter_tv_style"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/world_clock_item_current_day"
                    style="@style/world_clock_adapter_tv_style"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/world_clock_item_time_difference"
                    style="@style/world_clock_adapter_tv_style"
                    android:maxLines="1"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>


    <TextView
        android:id="@+id/world_clock_item_city_time"
        style="@style/world_clock_adapter_tv_style"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textSize="20sp"/>

</RelativeLayout>