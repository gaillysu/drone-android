<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/user_info_sex_bg"
                android:orientation="vertical"
                >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        >

        <ImageButton
            android:id="@+id/title_head_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@mipmap/head_icon_white"/>

        <ImageView
            android:id="@+id/title_middle_logo"
            android:layout_width="128dp"
            android:layout_height="23dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/drone_home_logo_icon"/>

        <LinearLayout
            android:id="@+id/manager_fragment_title_right_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="2dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@mipmap/add_icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@mipmap/watch_title_icon"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>