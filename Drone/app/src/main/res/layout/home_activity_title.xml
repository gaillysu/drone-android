<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/user_info_sex_bg"
                android:orientation="vertical">

    <ImageButton
        android:id="@+id/title_head_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/head_icon_white"/>

    <ImageView
        android:id="@+id/title_middle_logo"
        android:layout_width="128dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:src="@mipmap/drone_home_logo_icon"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/manager_fragment_title_right_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add_icon"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/watch_title_icon"/>
    </LinearLayout>
</RelativeLayout>