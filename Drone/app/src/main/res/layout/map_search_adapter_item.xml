<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/map_search_address_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="Guangdong Shenzhen Nanshan "
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/map_search_road_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="Shen nan Road 1553."
        android:layout_below="@id/map_search_address_item_tv"
        android:paddingTop="3dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/map_search_distance_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="100.23 km"
        android:layout_below="@id/map_search_road_item_tv"
        android:paddingTop="10dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"/>

</RelativeLayout>