<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <TextView
        android:id="@+id/map_search_road_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:paddingTop="5dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/map_search_distance_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="5dp"
        android:layout_toRightOf="@id/map_search_road_item_tv"
        android:paddingLeft="20dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/map_search_address_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/map_search_road_item_tv"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"/>

</RelativeLayout>