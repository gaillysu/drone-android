<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!-- header-->
    <include
        android:id="@+id/activity_add_watch_header_layout"
        layout="@layout/toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:id="@+id/add_watch_activity_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/activity_add_watch_watch_information_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="280dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/activity_add_watch_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/activity_add_watch_view_pager_current_page_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/add_watch_activity_content_bg"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/add_watch_activity_view_bg"/>

                <TextView
                    android:id="@+id/activity_add_watch_contacts_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/notifications_notifications"
                    android:textSize="25sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/add_watch_activity_view_bg_color"/>

                <TextView
                    android:id="@+id/activity_add_watch_forget_watch"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/add_watch_activity_content_forget_watch"
                    android:textSize="25sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_addwatch_nowatch_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:src="@mipmap/mydevices_hold_drone_icon"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_watch_activity_prompt_user"
                    android:textColor="@color/add_watch_activity_prompt_user"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    style="@style/add_watch_activity_prompt_user_text_style"
                    android:layout_marginTop="15dp"
                    android:text="@string/add_watch_activity_prompt_user_one"
                    />

                <TextView
                    style="@style/add_watch_activity_prompt_user_text_style"
                    android:text="@string/add_watch_activity_prompt_user_two"
                    />

                <TextView
                    style="@style/add_watch_activity_prompt_user_text_style"
                    android:text="@string/add_watch_activity_prompt_user_three"
                    />

                <TextView
                    style="@style/add_watch_activity_prompt_user_text_style"
                    android:text="@string/add_watch_activity_prompt_user_four"/>

                <Button
                    android:id="@+id/activity_add_watch_open_shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_horizontal"
                    android:text="@string/add_watch_activity_shop_address"
                    android:textColor="@color/add_watch_activity_shop_address_text_color"/>
            </LinearLayout>
        </LinearLayout>


    </FrameLayout>
    <!-- footer-->
    <RelativeLayout
        android:id="@+id/activity_addwatch_footer_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/activity_addwatch_add_imagebutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:src="@mipmap/world_clock_add_city_icon"/>
    </RelativeLayout>
</LinearLayout>
