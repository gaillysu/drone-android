<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- header-->
    <RelativeLayout
        android:id="@+id/activity_addwatch_header_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/userinfo_sex_bg"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/activity_addwatch_back_imagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@mipmap/left_arrpw_1"/>
        <TextView
            android:id="@+id/activity_addwatch_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watches"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/activity_addwatch_watchinfo_layout"
        android:layout_below="@id/activity_addwatch_header_layout"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DRONE Precision Timepieces Watch"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@mipmap/drone_mens_black_strap"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="Battery state:"
                    android:textSize="10sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="Version:"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="Connection state:"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/holo_blue_light"
                        android:text="Not Connected"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/holo_blue_light"
                        android:text="Unknown"
                        android:textSize="10sp"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/holo_blue_light"
                        android:text="Disconnected"
                        android:textSize="10sp"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <ListView
        android:id="@+id/activity_addwatch_menu_listview"
        android:layout_below="@id/activity_addwatch_watchinfo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </ListView>
    <!-- footer-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/userinfo_sex_bg"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:id="@+id/activity_addwatch_add_imagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:src="@mipmap/add_icon"/>
    </RelativeLayout>
</RelativeLayout>
