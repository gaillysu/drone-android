<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:paddingTop="25dp"
              android:orientation="vertical">

    <include layout="@layout/register_control_button"/>

    <ImageView
        android:id="@+id/register_drone_logo"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/ic_new_drone_logo_icon"/>

    <LinearLayout
        android:id="@+id/register_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/register_edit_bg"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/register_edit_email_ed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:textColor="#88000000"
            android:hint="@string/register_table_email"
            android:textColorHint="#88000000"
            android:paddingRight="5dp"
            android:inputType="textWebEmailAddress"
            android:paddingStart="10dp"
            android:textSize="20sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#55000000"/>

        <EditText
            android:id="@+id/register_edit_password_ed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="@string/register_table_password"
            android:paddingRight="5dp"
            android:textColor="#88000000"
            android:textColorHint="#88000000"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="20sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/login_activity_login_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:layout_marginTop="5dp"
        android:text="@string/login"
        android:textColor="@color/user_info_sex_bg"/>
    <TextView
        android:id="@+id/registe_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_ll"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:text="@string/third_party_login"
        android:textColor="#88000000"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/google_account_login"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:src="@mipmap/login_google_icon"/>

        <ImageView
            android:id="@+id/face_book_account_login"
            style="@style/login_register_icon_style"
            android:src="@mipmap/login_facebook_icon"/>

        <ImageView
            android:id="@+id/Twitter_account_login"
            style="@style/login_register_icon_style"
            android:src="@mipmap/login_twitter_icon"/>
    </LinearLayout>
</LinearLayout>