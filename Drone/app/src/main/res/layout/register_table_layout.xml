<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical">
    <ImageView
        android:id="@+id/register_drone_logo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/ic_new_drone_logo_icon"/>
    <TextView
    android:id="@+id/register_tx"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_gravity="center_horizontal"
    android:text="@string/register_email"
    android:textColor="@color/app_text_color_criterion"
    android:textSize="25sp"/>
    <LinearLayout
        android:id="@+id/register_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/register_edit_bg"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/register_edit_email_ed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="@string/register_table_email"
            android:inputType="textEmailSubject"
            android:textColor="#88000000"
            android:textColorHint="#88000000"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="20sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#33000000"/>

        <EditText
            android:id="@+id/register_edit_password_ed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="@string/register_table_password"
            android:textColor="#88000000"
            android:textColorHint="#88000000"
            android:inputType="textPassword"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textSize="20sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/registe_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:text="@string/third_party_login"
        android:textColor="#88000000"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/google_account_login"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:src="@mipmap/login_google_icon"/>

        <ImageView
            android:id="@+id/face_book_account_login"
            style="@style/login_register_icon_style"
            android:src="@mipmap/login_facebook_icon"/>

        <ImageView
            android:id="@+id/Twitter_account_login"
            style="@style/login_register_icon_style"
            android:src="@mipmap/login_twitter_icon"/>
    </LinearLayout>
</LinearLayout>
