<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/tutorial_drone_logo"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_marginTop="40dp"
        android:src="@mipmap/dronelogo"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tutorial_activity_bottom_ll"
        android:layout_below="@id/tutorial_drone_logo"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_login_vp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1">
        </android.support.v4.view.ViewPager>
            <LinearLayout
                android:id="@+id/view_pager_point_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
            </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tutorial_activity_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/login_bt"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/registe_edit_bg"
            android:text="@string/login"
            android:textColor="@color/app_text_color_criterion"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/registe_bt"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/registe_edit_bg"
            android:text="@string/login_registe"
            android:textColor="@color/app_text_color_criterion"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>