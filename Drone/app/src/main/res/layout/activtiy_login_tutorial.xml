<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/tutorial_drone_logo"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_marginTop="40dp"
        android:src="@mipmap/dronelogo"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tutorial_drone_logo"
        android:layout_above="@+id/tutorial_activity_bottom_ll"
        android:orientation="vertical">
        <android.support.v4.view.ViewPager
            android:id="@+id/activity_login_vp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1">
        </android.support.v4.view.ViewPager>
          <RelativeLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_centerHorizontal="true">
              <LinearLayout
                  android:id="@+id/view_pager_point_group"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
              </LinearLayout>
              <ImageView
                  android:id="@+id/tutorial_activity_select_point"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/select_poine"
                  />
          </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tutorial_activity_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/login_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/registe_edit_bg"
            android:textColor="@color/app_text_color_criterion"
            android:textStyle="bold"
            android:text="@string/login"/>

        <Button
            android:id="@+id/registe_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/registe_edit_bg"
            android:textStyle="bold"
             android:textColor="@color/app_text_color_criterion"
            android:text="@string/login_registe"/>
    </LinearLayout>
</RelativeLayout>