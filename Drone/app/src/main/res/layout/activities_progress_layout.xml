<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/background_steps"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/home_content_bar"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            >

            <com.liulishuo.magicprogresswidget.MagicProgressCircle
                android:id="@+id/home_fragment_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mpc_start_color="@color/progress_start_color"
                app:mpc_end_color="@color/progress_end_color"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activities_progress_middle_dec"
                    style="@style/home_content_activity_progress_middle_text_style"
                    android:text="@string/activities_steps"
                    android:textSize="28sp"
                    android:textColor="@color/home_content_text_color"
                    />

                <TextView
                    android:id="@+id/activities_progress_middle_tv"
                    style="@style/home_content_activity_progress_middle_text_style"
                    android:text="@string/activities__0"
                    android:textColor="@color/user_info_sex_bg"
                    android:textSize="40sp"
                    />

                <TextView
                    android:id="@+id/activities_progress_middle_user_step_goal"
                    style="@style/home_content_activity_progress_middle_text_style"
                    android:textColor="@color/home_content_text_color"
                    android:textSize="16sp"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/hourly_header_layout"/>
</LinearLayout>