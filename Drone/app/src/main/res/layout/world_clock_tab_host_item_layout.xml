<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical" >

    <ImageView
        android:id="@+id/world_clock_tab_host_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tab_assistant"
        android:focusable="false">
    </ImageView>

    <TextView
        android:id="@+id/world_clock_tab_host_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/world_clock_tab_host_image"
        android:text="@string/world_clock_title_text"
        android:textSize="15sp"
        android:textColor="@drawable/home_list_adapter_item_text_selected">
    </TextView>

</RelativeLayout>
