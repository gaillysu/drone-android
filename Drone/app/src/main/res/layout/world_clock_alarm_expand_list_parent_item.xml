<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/notification_bg_color"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/fragment_alarm_list_view_item_alarm_time_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_alarmm_list_view_item_alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="45sp"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/fragment_alarmm_list_view_item_alarm_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:shadowColor="@color/colorPrimary"
            android:theme="@style/compass_enable_switch_color"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/fragment_alarmm_list_view_item_alarm_repeat_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/fragment_alarmm_list_view_item_alarm_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/fragment_alarm_list_view_item_alarm_repeat_weekdays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fragment_alarmm_list_view_item_alarm_label"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/fragment_alarm_list_view_item_down_image_view"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/down"/>

    </RelativeLayout>
    <include layout="@layout/world_clock_alarm_expand_list_child_item"
         android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/line_color"
        />
</LinearLayout>