<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/notification_bg_color"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/fragment_alarm_list_view_item_alarm_time_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_alarmm_list_view_item_alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00"
            android:paddingLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/fragment_alarmm_list_view_item_alarm_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:shadowColor="@color/colorPrimary"
            android:theme="@style/compass_enable_switch_color"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_alarm_list_view_item_alarm_time_wrapper"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/fragment_alarmm_list_view_item_alarm_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="meeting"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/fragment_alarm_list_view_item_alarm_repeat_weekdays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fragment_alarmm_list_view_item_alarm_label"
            android:layout_marginLeft="20dp"
            android:text="Mon,Tue"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/fragment_alarm_list_view_item_down_image_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/down"/>

    </RelativeLayout>
</RelativeLayout>