<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <include layout="@layout/register_control_button"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="@string/user_info_clue"
        android:textColor="@color/register_text_color"
        android:textSize="19sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="@string/user_info_share"
        android:textColor="#88000000"
        android:textSize="14sp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:background="@drawable/register_edit_bg"
    android:baselineAligned="false"
    >
    <EditText
        android:id="@+id/user_info_activity_first_name_ed"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        android:inputType="text"
        android:textSize="20sp"
        android:background="@android:color/transparent"
        android:hint="@string/user_info_activity_edit_first_name_hint"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        />
    <EditText
        android:id="@+id/user_info_activity_last_name_ed"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:textSize="20sp"
        android:hint="@string/user_info_activity_edit_last_name_hint"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@android:color/transparent"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/register_edit_bg">

            <TextView
                android:id="@+id/user_info_sex_male_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/user_info_sex_bg"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="@string/user_sex_male"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/register_edit_bg">

            <TextView
               android:id="@+id/user_info_sex_female_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
               android:textSize="20sp"
                android:background="@android:color/transparent"
                android:text="@string/user_sex_female"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/register_edit_bg"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_birthday"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:hint="@string/user_info_birthday"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_height"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:hint="@string/user_info_height"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_weight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:hint="@string/user_info_weight"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>