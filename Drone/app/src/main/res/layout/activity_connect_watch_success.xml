<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_gravity="center_horizontal"
              android:gravity="center_horizontal"
              android:background="@color/notification_bg_color"
              android:paddingTop="25dp"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/show_watch_iv"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="160dp"
        android:src="@mipmap/welcome_logo_1"/>
    <TextView
          android:id="@+id/device_connecting_status"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="40dp"
          android:text="@string/show_watch_connected"
          android:textSize="25sp" />

    <TextView
        android:id="@+id/watch_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:text="@string/watch_name"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/watch_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="3dp"
        android:visibility="visible"
        android:text="@string/watch_version"/>
    <TextView
        android:id="@+id/watch_buletooth_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:visibility="visible"
        android:layout_marginTop="1dp"
        android:text="@string/watch_bluetooth_id"/>

    <Button
        android:id="@+id/calibrate_watch_button"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@color/user_info_sex_bg"
        android:text="@string/calibrate_watch_button_next"
        android:visibility="visible"
        />

</LinearLayout>