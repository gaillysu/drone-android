<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_height="match_parent"
                android:paddingTop="25dp"
                android:orientation="vertical">
    <Button
        android:id="@+id/tutorial_skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:textColor="@color/app_text_color_criterion"
        android:text="@string/tutorial_skip"/>

    <ImageView
        android:id="@+id/tutorial_drone_logo"
        android:layout_width="220dp"
        android:layout_height="36dp"
        android:layout_marginTop="80dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_new_drone_logo_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tutorial_activity_bottom_ll"
        android:layout_below="@id/tutorial_drone_logo"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_login_vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            >

        </android.support.v4.view.ViewPager>
            <LinearLayout
                android:id="@+id/view_pager_point_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_below="@id/activity_login_vp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tutorial_activity_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/login_bt"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/register_edit_bg"
            android:text="@string/login"
            android:textColor="@color/app_text_color_criterion"
            android:textSize="22sp"/>

        <Button
            android:textSize="22sp"
            android:id="@+id/register_bt"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/register_edit_bg"
            android:text="@string/login_register"
            android:textColor="@color/app_text_color_criterion"
            />
        <Button
            android:id="@+id/open_forget_password_page_bt"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:textSize="22sp"
            android:textColor="@color/app_text_color_criterion"
            android:text="@string/login_forget_password"/>
    </LinearLayout>
</RelativeLayout>