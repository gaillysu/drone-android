<?xml version="1.0" encoding="utf-8"?>
<com.dayton.drone.view.SquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/home_adapter_menu_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src = "@drawable/ic_activities_icon"
        />
    <TextView
        android:id="@+id/home_adapter_menu_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_adapter_menu_icon"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:lines="1"
        android:text ="@string/home_menu_name_activities"
        android:textColor="@drawable/home_list_adapter_item_text_selected"
        android:textSize="15sp"/>
</com.dayton.drone.view.SquareLayout>